#:kivy 1.10.0

#:import MDCard kivymd.card.MDCard
#:import MDSwitch kivymd.selectioncontrols.MDSwitch
#:import MDSeparator kivymd.card.MDSeparator
#:import MDIconButton kivymd.button.MDIconButton
#:import MDRaisedButton kivymd.button.MDRaisedButton
#:import MDList kivymd.list.MDList
#:import OneLineListItem kivymd.list.OneLineListItem


<Toolbar>:
	canvas.before:
		Color:
			rgb: 255, 255, 255, 1
		Rectangle:
			pos: self.pos
			size: self.size

	MDLabel:
		text: root.title
		bold: True
		halign: "center"
		text_color: root.title_color
		font_style: "Subhead"
		theme_text_color: "Custom"
		size_hint_y: None
		height: self.texture_size[1]
		pos_hint: {"center_y": .5}

	MDIconButton:
		icon: root.button_icon
		opposite_colors: True
		text_color: root.button_color
		theme_text_color: "Custom"
		pos_hint: {"right": .95, "center_y": .5}
		on_release: if callable(root.button_callback): root.button_callback()

	Image:
		source: "Data/Images/line-gradient.png"
		keep_ratio: False
		allow_stretch: True
		size_hint_y: None
		height: dp(3)
		pos_hint: {"top": 0}


<Card@MDCard>:
	elevation: 0
	size_hint: .93, .275
	border_radius: 15


<Container@BoxLayout>:
	orientation: "vertical"
	padding: 10


<CTitle@MDLabel>:
	font_style: "Body1"
	text_color: .17, .17, .17, 1
	theme_text_color: "Custom"
	size_hint_y: None
	height: self.texture_size[1]


<Row@BoxLayout>:
	orientation: "horizontal"


<CSwitch@MDSwitch>:
	thumb_color: .16078431372549018, .4392156862745098, .4392156862745098, 1
	thumb_color_down: .16078431372549018, .4392156862745098, .4392156862745098, 1
	_track_color_normal: .9058823529411765, .9058823529411765, .9058823529411765, 1
	_track_color_active: .7921568627450981, .9176470588235294, .8509803921568627, 1


