#:kivy 1.10.0

#:import MDLabel kivymd.label.MDLabel
#:import MDSpinner kivymd.spinner.MDSpinner


<InitialScreen>:
	Image:
		source: "Data/Images/background-gradient.png"
		size: root.size
		keep_ratio: False
		allow_stretch: True

	Image:
		source: "Data/Images/logotype.png"
		size_hint: .25, .25
		pos_hint: {"center_x": .5, "center_y": .6}

	MDSpinner:
		id: loading
		color: 255, 255, 255, .5
		size_hint: None, None
		size: dp(46), dp(46)
		pos_hint: {"center_x": .5, "top": .3}
		opacity: 0

	MDLabel:
		text: root.heading
		halign: "center"
		font_style: "Subhead"
		theme_text_color: "Primary"
		opposite_colors: True
		size_hint_y: None
		pos_hint: {"top": .15}